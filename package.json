    "version": "1.0.0",
    "type": "module",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "rimraf ./build && tsc",
        "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
        "format": "prettier --write .",
        "lint": "eslint '**/*.{js,jsx,ts,tsx}' --quiet",
